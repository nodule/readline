{
  "name": "clearLine",
  "ns": "readline",
  "title": "Clear Line",
  "description": "Clears current line of given TTY stream in a specified direction",
  "require": {
    "readline": "builtin"
  },
  "phrases": {
    "active": "Clearing line"
  },
  "ports": {
    "input": {
      "readline": {
        "title": "Readline",
        "type": "Interface"
      },
      "dir": {
        "title": "Direction",
        "enum": ["left","right","all"],
        "default": "all"
      }
    },
    "output": {
      "readline": {
        "title": "Readline",
        "type": "Interface"
      }
    }
  }
}
